---
import { Container, Button } from '@littlesticks/odyssey-theme-components';
import settings from '../../../config/settings.js';
---
<section>
    <div class="base-video">
        <video autoplay muted loop class="leader-lab-video">
          <source rel="preload" src="assets/videos/LeaderLabAdecco-Event.mp4" type="video/mp4">
        </video>
        <h2 class="content">FÃ¶r framtidens ledare</h2>
    </div>
</section>

<style>
    .leader-lab-video {
        min-width: 100%;
        min-height: 100%;
    }

    .content {
      left: 50%;
      top: 50%;
      transform: translate(-50%,-50%);
      position: absolute;
      background: rgba(0, 0, 0, 0.5);
      color: #f1f1f1;
      padding: 20px;
    }

    .base-video {
        position: float;
        right: 0;
        bottom: 0;
        min-width: 100%;
        min-height: 100%;
        z-index: -100;
        width: 100%;
    }

	.hero-section__section {
		min-height: clamp(90vh, 100vw, calc(100vh - var(--navbar-height)));
		display: grid;
		grid-template-columns: 1fr 1fr;
		align-items: center;
		gap: 1rem;
	}
	.hero-section__text {
		justify-self: center;
		max-width: 25rem;
	}
	.hero-btns__container {
		display: flex;
		align-items: center;
		gap: 1rem;
	}
	.hero-btns__container {
		margin-right: 1rem;
	}
	.hero-section__image {
		display: flex;
	}
	.hero-section__image img {
		width: 100%;
		height: 100%;
		max-height: 80vh;
		object-fit: cover;
		border-radius: var(--theme-shape-radius);
	}
	@media (max-width: 768px) {
		.hero-section__section {
			grid-template-columns: 1fr;
		}
	}
</style>